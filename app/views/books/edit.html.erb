<h2>Editing Book</h2>

<%= form_with(model: @book, local: true) do |form| %>
	<%= form.label :title %>
	<%= form.text_field :title %>
	<%= form.label :body %>
	<%= form.text_area :body %>
	<%= form.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path %>