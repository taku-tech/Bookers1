<div class="main">
	<div class="lists-wrapper">
		<h2 class="main-title">Books</h2>
		<table>
			<thead class="table-head">
				<tr>
					<th>title</th>
					<th>Body</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td><a href="#">show</a></td>
					<td><a href="#">update</a></td>
					<td><a href="#">delete</a></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="post-wrapper">
		<h2 class="main-title">New Book</h2>
		<%= form_with(model: @book, local: true) do |form| %>
			<%= form.label :title %>
			<%= form.text_field :title %>
			<%= form.label :body %>
			<%= form.text_area :body %>
			<%= form.submit "Create Book"%>
		<% end %>
	</div>
</div>